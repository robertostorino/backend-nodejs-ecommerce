

<div class="container" style="margin-top: 3rem;">
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
        <div class="container-fluid">
            <a class="navbar-brand">Bienvenido <b>{{user}}</b></a>
            <form class="d-flex" action='/logout' method="get">
                <button class="btn btn-primary" type="submit">LogOut</button>
            </form>
        </div>
    </nav>
</div>

<section class="container-fluid d-flex flex-row justify-content-center" style="margin-top: 2rem;">
    <div class="d-flex flex-column" style="width: 40%; padding-right: 3rem">
        <div>
            <div class="container mt-3 d-flex justify-content-center flex-column align-items-center">
                <h2 style="color: brown;">PRODUCTOS</h2>
                <div class="text-bg-light" style="padding: 0rem 2rem; border-radius: 4%">
                    <h2 style="color:blue;">Ingrese Producto</h2>
                    <form style="display: flex; justify-content: center; align-items: center; flex-direction: column;" id="productForm" autocomplete="off">
                        <div class="form-group">
                            <label for="title"><b>Nombre</b></label>
                            <input class="form-control" type="text" name="title" required>
                        </div>

                        <div class="form-group">
                            <label for="price"><b>Precio</b></label>
                            <input class="form-control" type="number" name="price" required>
                        </div>

                        <div class="form-group">
                            <label for="thumbnail"><b>URL imagen</b></label>
                            <input class="form-control" type="text" name="thumbnail" required>
                        </div>
                        <input class="btn btn-primary my-2" type="submit" value="Guardar">
                    </form>
                </div>
            </div>
        </div>
        <hr>
        <div class="table-responsive container">
            <table class="table table-success">
                <thead>
                    <tr>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Imagen</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>

    <div style="width: 45%; padding-left: 3rem; border-left: 1px solid gray; ">
        <div class="mt-3">
            <h2 style="color: brown; margin: auto; width: 50%; text-align: center">CHAT</h2>
            <div id="compression"></div>
            <br>
            <form autocomplete="off" style="padding-right: 3rem; font-size: small" id="messageForm" >
                <fieldset class="text-bg-light" style="padding: 0.5rem; border-radius: 4%">
                    <legend style="font-weight: bold;">Información requerida</legend>
                    <br>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label"><b>Email</b></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="email" required>
                        </div>

                        <label for="name" class="col-sm-2 col-form-label"><b>Nombre</b></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="name" required>
                        </div>
                    </div>
                    <br>
                    <div class="form-group row">
                        <label for="surname" class="col-sm-2 col-form-label"><b>Apellido</b></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="surname" required>
                        </div>
                        <label for="avatar" class="col-sm-2 col-form-label"><b>Avatar URL</b></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="avatar" required>
                        </div>
                    </div>
                </fieldset>
                <br>
                <fieldset class="text-bg-light" style="padding: 0.5rem; border-radius: 4%">
                    <legend style="font-weight: bold;">Información opcional</legend>
                    <br>
                    <div class="form-group row">
                        <label for="alias" class="col-sm-2 col-form-label"><b>Alias</b></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="alias">
                        </div>
                        <label for="age" class="col-sm-2 col-form-label"><b>Edad</b></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" name="age">
                        </div>
                    </div>
                </fieldset>
                <br>
                <div class="form-group row" style="padding-right: 0.6rem;">
                    <label for="message" class="col-sm-2 col-form-label"><b>Mensaje</b></label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="message" required>
                    </div>
                    <button type="submit" class="btn col-sm-2 btn-primary" style="padding: 0;" id="sendMessage">
                        <span class="material-icons">send</span>
                    </button>
                </div>
            </form>
            <hr>
            <div id="mensajes"></div>
        </div>
    </div>
</section>
